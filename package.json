{
  "name": "focus-within-polyfill",
  "version": "4.1.0",
  "description": "focus-within pseudo selector polyfill",
  "main": "dist/focus-within-polyfill.js",
  "scripts": {
    "commit": "git-cz",
    "clean": "rimraf dist",
    "lint": "eslint src/**",
    "lint:fix": "eslint src/** --fix",
    "build": "rollup -c rollup.config.js --environment BUILD:production",
    "watch": "rollup -c rollup.config.js --environment BUILD:development -w",
    "prepublishOnly": "npm run clean && npm run lint && npm run test && npm run build",
    "upgrade": "npm-check --update",
    "test": "bundlesize",
    "semantic-release": "semantic-release"
  },
  "homepage": "https://github.com/matteobad/focus-within-polyfill#readme",
  "repository": "https://github.com/matteobad/focus-within-polyfill",
  "bugs": "https://github.com/matteobad/focus-within-polyfill/issues",
  "keywords": [
    "polyfill",
    "focus",
    "blur",
    "focus-within",
    "pseudo-class",
    "no-jquery",
    "vanilla",
    "vanilla-js",
    "webcomponents",
    "shadowRoot"
  ],
  "author": "Matteo Badini",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "^0.9.0",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.9",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "bundlesize": "^0.17.2",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.13.0",
    "eslint-plugin-jest": "^22.6.4",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "npm-check": "^5.9.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.13.1",
    "semantic-release": "^15.13.14"
  },
  "bundlesize": [
    {
      "path": "./dist/*.js",
      "maxSize": "1 kB"
    }
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  }
}
